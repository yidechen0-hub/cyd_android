<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/host_plugin_item_bg"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <!-- 插件名称 -->
    <TextView
        android:id="@+id/pluginName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/host_text_primary"/>

    <!-- 插件版本 -->
    <TextView
        android:id="@+id/pluginVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/host_text_secondary"
        android:layout_marginTop="4dp"/>

    <!-- 插件描述 -->
    <TextView
        android:id="@+id/pluginDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/host_text_secondary"
        android:layout_marginTop="8dp"/>

    <!-- 启动插件按钮 -->
    <Button
        android:id="@+id/startPluginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动插件"
        android:backgroundTint="@color/host_btn_secondary"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"/>

</LinearLayout>
